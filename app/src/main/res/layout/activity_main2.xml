<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/Nueva"
        android:layout_width="269dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Nueva Contraseña"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.288" />

    <EditText
        android:id="@+id/Repetir"
        android:layout_width="269dp"
        android:layout_height="59dp"
        android:ems="10"
        android:hint="Repita la contraseña"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.474" />

    <Button
        android:id="@+id/Confirmar"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:text="Confirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699" />

    <ImageView
        android:id="@+id/Denegado"
        android:layout_width="63dp"
        android:layout_height="57dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/Confirmar"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/Confirmar"
        app:layout_constraintTop_toBottomOf="@+id/Confirmar"
        app:srcCompat="@android:drawable/presence_offline" />

    <ImageView
        android:id="@+id/Confirmado"
        android:layout_width="64dp"
        android:layout_height="61dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="@+id/Confirmar"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/Confirmar"
        app:layout_constraintTop_toBottomOf="@+id/Confirmar"
        app:srcCompat="@android:drawable/presence_online" />

    <ImageView
        android:id="@+id/Neutral"
        android:layout_width="67dp"
        android:layout_height="62dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/Confirmar"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/Confirmar"
        app:layout_constraintTop_toBottomOf="@+id/Confirmar"
        app:srcCompat="@android:drawable/presence_invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>